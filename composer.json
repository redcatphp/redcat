{
	"name": "redcatphp/redcatphp",
	"type": "framework",
	"description": "RedCat - Code with agility",
	"keywords": ["PHP", "Framework", "RAD", "Best-Practices", "Full-Stack", "SOLID", "MVC"],
	"license": ["CC0-1.0"],
	"homepage": "https://github.com/redcatphp/redcatphp",
	"authors": [
		{
			"name": "Jo Surikat",
			"email": "jo@surikat.pro",
			"homepage": "http://redcatphp.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://asset-packagist.org" 
		}
	],
	"require": {
		"php": ">=5.6.0",
		"letudiant/composer-shared-package-plugin": "^3.1",
		"redcatphp/artist": "@dev",
		"redcatphp/framework": ">=2.3.4",
		"bower-asset/js": "@dev",
		"bower-asset/easyfont-source-code-pro": "@dev",
		"bower-asset/font-awesome": "@dev"
	},
	"require-dev": {
		"redcatphp/debug": "@dev"
	},
	"scripts": {
        "post-install-cmd": [
             "RedCat\\Artist\\ComposerArtist::installRedcatphp",
             "RedCat\\Artist\\ComposerArtist::setup"
        ],
        "post-update-cmd": [
             "RedCat\\Artist\\ComposerArtist::installRedcatphp",
             "RedCat\\Artist\\ComposerArtist::setup"
        ],
        "post-create-project-cmd": [
             "RedCat\\Artist\\ComposerArtist::installRedcatphp",
             "RedCat\\Artist\\ComposerArtist::setup"
        ]
    },
    "config": {
		"vendor-dir": "packages",
		"bin-dir": "packages/bin"
    },
	"minimum-stability": "dev",
	"extra": {
		"shared-package": {
			"symlink-base-path": "./packages-shared",
			"vendor-dir": "packages-shared",
			"symlink-dir": "packages",
			"package-list": [
				"*"
			]
		}
    }
}