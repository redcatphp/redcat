{
	"name": "redcatphp/redcatphp",
	"type": "framework",
	"description": "RedCat - Code with agility",
	"keywords": ["PHP", "Framework", "RAD", "Best-Practices", "Full-Stack", "SOLID", "MVC"],
	"license": ["CC0-1.0"],
	"homepage": "https://github.com/redcatphp/redcatphp",
	"authors": [
		{
			"name": "Jo Surikat",
			"email": "jo@surikat.pro",
			"homepage": "http://redcatphp.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://asset-packagist.org" 
		}
	],
	"require": {
		"php": ">=5.6.0",
		"redcatphp/framework": ">=2.0",
		"bower-asset/js": "@dev",
		"bower-asset/easyfont-source-code-pro": "@dev",
		"bower-asset/font-awesome": "@dev"
	},
	"scripts": {
        "post-install-cmd": [
             Artist\ComposerEvents::postInstallCmd"
        ],
        "post-update-cmd": [
             Artist\ComposerEvents::postUpdateCmd"
        ],
        "post-create-project-cmd": [
             Artist\ComposerEvents::createProjectCmd"
        ]
    },
    "extra":{
		"artist":{
			"scripts":{
				"class":"MyApp/Artist/Setup"
			}
		}
    },
    "config": {
		"vendor-dir": "packages",
		"bin-dir": "packages/bin"
    },
	"minimum-stability": "dev"
}
