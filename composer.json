{
	"name": "redcatphp/redcatphp",
	"type": "framework",
	"description": "RedCat - Code with agility",
	"keywords": ["PHP", "Framework", "RAD", "Best-Practices", "Full-Stack", "SOLID", "MVC"],
	"license": ["CC0-1.0"],
	"homepage": "https://github.com/redcatphp/redcatphp",
	"authors": [
		{
			"name": "Jo Surikat",
			"email": "jo@surikat.pro",
			"homepage": "http://redcatphp.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=5.6.0",
		"redcatphp/framework": "@dev"
	},
	 "scripts": {
        "post-install-cmd": [
            "php artist install:end",
            "php -r \"array_walk(['.tmp','.data','content'],function($dir){ mkdir($dir);chmod($dir,0777); });\"",
            "php -r \"copy('.config.env.phps','.config.env.php');\""
        ],
        "post-update-cmd": [
            "php artist clearcache"
        ],
        "post-create-project-cmd": [
            "php artist install:end",
            "php -r \"array_walk(['.tmp','.data','content'],function($dir){ mkdir($dir);chmod($dir,0777); });\"",
            "php -r \"copy('.config.env.phps','.config.env.php');\""
        ]
    },
    "config": {
		"vendor-dir": "packages",
		"bin-dir": "packages/bin"
    },
	"minimum-stability": "dev"
}
