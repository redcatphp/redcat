RewriteEngine on

#Get the current CWD
RewriteCond $0#%{REQUEST_URI} ([^#]*)#(.*)\1$
RewriteRule ^.*$ - [E=CWD:%2]

#Replace 127.0.0.1 by your IP to allow your ip access site in maintenance and uncomment
#RewriteCond %{REMOTE_ADDR} !^127.0.0.1

RewriteCond %{REQUEST_URI} !^/maintenance$
RewriteCond %{REQUEST_URI} !^/shared/maintenance.php$
RewriteRule ^(.*)$ %{ENV:CWD}maintenance [R=307,L]

RewriteRule ^maintenance$ %{ENV:CWD}shared/maintenance.php [L]